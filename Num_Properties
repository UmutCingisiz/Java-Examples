
public class MyInteger {
		   private int value;
		   public MyInteger(int value) {
		       this.value = value;
		   }

		   public int getValue() {
		       return value;
		   }

		   public boolean isEven() {
		       if (value % 2 == 0)
		           return true;
		       else
		           return false;
		   }

		   public boolean isOdd() {
		       if (value % 2 != 0)
		           return true;
		       else
		           return false;
		   }

		   public boolean isPrime() {
		       if (value == 2)
		           return true;
		       for (int i = 2; i * i <= value; i++) {
		           if (value % i == 0)
		               return false;
		       }
		       return true;
		   }
		   
		   public static boolean isEven(int val) {
		       if (val % 2 == 0)
		           return true;
		       else
		           return false;
		   }

		   public static boolean isOdd(int val) {
		       if (val % 2 != 0)
		           return true;
		       else
		           return false;
		   }

		   public static boolean isPrime(int val) {
		       if (val == 2)
		           return true;
		       for (int i = 2; i * i <= val; i++) {
		           if (val % i == 0)
		               return false;
		       }
		       return true;
		   }

		   public static boolean isEven(MyInteger my) {
		       if (my.getValue() % 2 == 0)
		           return true;
		       else
		           return false;
		   }

		   public static boolean isOdd(MyInteger my) {
		       if (my.getValue() % 2 != 0)
		           return true;
		       else
		           return false;
		   }

		   public static boolean isPrime(MyInteger my) {
		       if (my.getValue() == 2)
		           return true;
		       for (int i = 2; i * i <= my.getValue(); i++) {
		           if (my.getValue() % i == 0)
		               return false;
		       }
		       return true;
		   }


		   public boolean equals(int val) {
		       if (this.value == val)
		           return true;
		       else
		           return false;
		   }
		   
		   
		   public boolean equals(MyInteger my) {
		       if (this.value == my.getValue())
		           return true;
		       else
		           return false;
		   }

		   public static int parseInt(char[] ch) {
		       return Integer.parseInt(String.valueOf(ch));
		   }

		   public static int parseInt(String str) {
		       return Integer.parseInt(str);
		   }
		}


